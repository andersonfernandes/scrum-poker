<div class="page-header" data-channel="rooms" data-room-id="<%= @session_vote.id %>" data-owner-room-id="<%= @session_vote.owner_id %>">
  <h1><%= @session_vote.title %> <small>You need click on card to vote!</small> </h1>
</div>

<div class="steps-group">
  <div class="row bs-wizard" style="border-bottom:0;">
    <% @steps.each_with_index do |step, index|  %>
      <div class="col-md-<%= 12 / 2 %> bs-wizard-step complete">
        <div class="text-center bs-wizard-stepnum"><%= step.title %></div>
        <div class="progress"><div class="progress-bar"></div></div>
        <a href="#" class="bs-wizard-dot" step="<%= index %>"></a>
      </div>
    <% end  %>
  </div>
</div>

<hr />

<% @steps.each_with_index do |step, index| %>
  <div class="step-0<%= index %>" style="display:<%= index > 0 ? 'none': 'block'%>">
    <%= render partial: "cards", locals: { cards: step.cards, session_vote: @session_vote }  %>
  </div>
<% end %>
